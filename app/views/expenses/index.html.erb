<%= column_chart Expense.group_by_month(:date).sum(:amount), prefix: "S", thousands: "," %>

<table>
	<thead>
		<tr>
			<th>Date</th>
			<th>Description</th>
			<th>Type</th>
			<th>Amount</th>
		</tr>
	</thead>
	<tbody>
		<% @expenses.each do |e| %>
		<tr>
			<td><%= e.date %></td>
			<td><%= e.description %></td>
			<td><%= e.type %></td>
			<td><%= e.amount %></td>
		</tr>
		<% end %>
	</tbody>
</table>